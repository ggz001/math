        // 初始化太阳系可视化
        function initSolarSystem() {
            const container = d3.select("#solar-system-container");
            const width = container.node().clientWidth;
            const height = container.node().clientHeight;
            const centerX = width / 2;
            const centerY = height / 2;
            
            // 最大轨道半径（海王星）
            const maxOrbitRadius = d3.max(solarSystemData.planets, d => d.orbitRadius);
            
            // 缩放因子 - 调整此值以控制整体大小
            const scaleFactor = Math.min(width, height) / (maxOrbitRadius * 2.5);
            
            // 创建SVG
            const svg = container.append("svg")
                .attr("width", width)
                .attr("height", height)
                .attr("viewBox", `0 0 ${width} ${height}`);
            
            // 背景星星
            const stars = svg.append("g").attr("class", "stars");
            for (let i = 0; i < 200; i++) {
                stars.append("circle")
                    .attr("cx", Math.random() * width)
                    .attr("cy", Math.random() * height)
                    .attr("r", Math.random() * 1.5)
                    .attr("fill", "white")
                    .attr("opacity", Math.random() * 0.8);
            }
            
            // 绘制太阳
            const sun = solarSystemData.sun;
            const sunRadius = sun.radius / 1000 * scaleFactor; // 缩放太阳半径
            
            svg.append("circle")
                .attr("cx", centerX)
                .attr("cy", centerY)
                .attr("r", sunRadius)
                .attr("fill", sun.color)
                .attr("class", "shadow-lg")
                .style("filter", "drop-shadow(0 0 15px rgba(255, 209, 102, 0.8))");
            
            // 为太阳添加名称标签
            svg.append("text")
                .attr("x", centerX)
                .attr("y", centerY + sunRadius + 20)
                .attr("text-anchor", "middle")
                .attr("fill", "white")
                .attr("font-size", "14px")
                .text(sun.name);
            
            // 绘制行星轨道
            const planetGroups = svg.selectAll(".planet-group")
                .data(solarSystemData.planets)
                .enter()
                .append("g")
                .attr("class", "planet-group")
                .attr("data-planet", d => d.name);
            
            // 轨道路径
            planetGroups.append("circle")
                .attr("class", "orbit-path")
                .attr("cx", centerX)
                .attr("cy", centerY)
                .attr("r", d => d.orbitRadius * scaleFactor);
            
            // 行星
            const planets = planetGroups.append("g")
                .attr("class", "planet")
                .attr("transform", d => `translate(${centerX + d.orbitRadius * scaleFactor}, ${centerY})`);
            
            planets.append("circle")
                .attr("r", d => Math.max(2, d.radius / 5000 * scaleFactor)) // 确保行星可见
                .attr("fill", d => d.color)
                .attr("class", "planet-body")
                .style("cursor", "pointer");
            
            // 行星名称标签
            planets.append("text")
                .attr("x", 0)
                .attr("y", d => -(Math.max(2, d.radius / 5000 * scaleFactor) + 10))
                .attr("text-anchor", "middle")
                .attr("fill", "white")
                .attr("font-size", "10px")
                .attr("class", "planet-label")
                .text(d => d.name);
            
            // 存储行星角度
            const planetAngles = {};
            solarSystemData.planets.forEach(planet => {
                planetAngles[planet.name] = Math.random() * Math.PI * 2;
            });
            
            // 为行星添加点击事件
            planets.on("click", function(event, d) {
                showPlanetInfo(d);
            });
            
            // 显示行星信息面板
            function showPlanetInfo(planet) {
                const panel = document.getElementById('planet-info-panel');
                document.getElementById('planet-name').textContent = planet.name;
                document.getElementById('planet-description').textContent = planet.description;
                document.getElementById('planet-diameter').textContent = planet.diameter;
                document.getElementById('planet-orbit-period').textContent = planet.orbitPeriod + (planet.orbitPeriod > 1 ? ' 地球日' : ' 地球日');
                document.getElementById('planet-rotation-period').textContent = planet.rotationPeriod + (planet.rotationPeriod > 1 ? ' 小时' : ' 小时');
                document.getElementById('planet-moons-count').textContent = planet.moonsCount;
                document.getElementById('planet-icon').style.backgroundColor = planet.color;
                
                panel.classList.remove('hidden');
                panel.classList.add('block');
                
                // 添加动画效果
                panel.style.opacity = '0';
                panel.style.transform = 'translateY(20px)';
                panel.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
                
                setTimeout(() => {
                    panel.style.opacity = '1';
                    panel.style.transform = 'translateY(0)';
                }, 10);
            }
            
            // 绘制卫星
            const moonGroups = {};
            solarSystemData.planets.forEach(planet => {
                const planetMoons = solarSystemData.moons[planet.name.toLowerCase()];
                if (planetMoons && planetMoons.length > 0) {
                    const planetGroup = svg.select(`.planet-group[data-planet="${planet.name}"]`);
                    const planetOrbitRadius = planet.orbitRadius * scaleFactor;
                    
                    moonGroups[planet.name] = planetGroup.selectAll(`.moon-group-${planet.name}`)
                        .data(planetMoons)
                        .enter()
                        .append("g")
                        .attr("class", `moon-group-${planet.name}`)
                        .attr("data-moon", d => d.name);
                    
                    // 卫星轨道
                    moonGroups[planet.name].append("circle")
                        .attr("class", "orbit-path moon-orbit")
                        .attr("cx", 0)
                        .attr("cy", 0)
                        .attr("r", d => d.orbitRadius * scaleFactor * 10);
                    
                    // 卫星
                    const moons = moonGroups[planet.name].append("g")
                        .attr("class", "moon")
                        .attr("transform", d => `translate(${d.orbitRadius * scaleFactor * 10}, 0)`);
                    
                    moons.append("circle")
                        .attr("r", d => Math.max(1, d.radius / 2000 * scaleFactor)) // 确保卫星可见
                        .attr("fill", d => d.color)
                        .attr("class", "moon-body");
                    
                    // 卫星名称标签
                    moons.append("text")
                        .attr("x", 0)
                        .attr("y", d => -(Math.max(1, d.radius / 2000 * scaleFactor) + 8))
                        .attr("text-anchor", "middle")
                        .attr("fill", "white")
                        .attr("font-size", "8px")
                        .attr("class", "moon-label")
                        .text(d => d.name);
                    
                    // 存储卫星角度
                    planetMoons.forEach(moon => {
                        moon.angle = Math.random() * Math.PI * 2;
                    });
                }
            });
            
            // 动画速度控制
            let animationSpeed = 1;
            const speedControl = document.getElementById('speed-control');
            const speedValue = document.getElementById('speed-value');
            
            speedControl.addEventListener('input', function() {
                animationSpeed = parseFloat(this.value);
                speedValue.textContent = animationSpeed.toFixed(1) + 'x';
            });
            
            // 缩放控制
            let currentScale = 1;
            const zoomIn = document.getElementById('zoom-in');
            const zoomOut = document.getElementById('zoom-out');
            const resetView = document.getElementById('reset-view');
            
            zoomIn.addEventListener('click', function() {
                currentScale = Math.min(3, currentScale * 1.2);
                updateView();
            });
            
            zoomOut.addEventListener('click', function() {
                currentScale = Math.max(0.3, currentScale / 1.2);
                updateView();
            });
            
            resetView.addEventListener('click', function() {
                currentScale = 1;
                updateView();
            });
            
            function updateView() {
                svg.attr("viewBox", `${centerX - width / 2 / currentScale} ${centerY - height / 2 / currentScale} ${width / currentScale} ${height / currentScale}`);
            }
            
            // 显示/隐藏所有轨道
            document.getElementById('show-all-orbits').addEventListener('click', function() {
                svg.selectAll('.orbit-path').attr('stroke-opacity', 0.2);
            });
            
            document.getElementById('hide-all-orbits').addEventListener('click', function() {
                svg.selectAll('.orbit-path').attr('stroke-opacity', 0);
            });
            
            // 显示/隐藏所有卫星
            document.getElementById('show-all-moons').addEventListener('click', function() {
                svg.selectAll('.moon-group').attr('display', 'block');
            });
            
            document.getElementById('hide-all-moons').addEventListener('click', function() {
                svg.selectAll('.moon-group').attr('display', 'none');
            });
            
            // 动画循环
            function animate() {
                const now = Date.now() / 1000;
                
                // 更新行星位置
                solarSystemData.planets.forEach(planet => {
                    // 计算新角度
                    planetAngles[planet.name] = now / planet.orbitPeriod * Math.PI * 2;
                    
                    // 更新位置
                    const x = centerX + Math.cos(planetAngles[planet.name]) * planet.orbitRadius * scaleFactor;
                    const y = centerY + Math.sin(planetAngles[planet.name]) * planet.orbitRadius * scaleFactor;
                    
                    const planetGroup = svg.select(`.planet-group[data-planet="${planet.name}"]`);
                    planetGroup.select(".planet")
                        .attr("transform", `translate(${x}, ${y})`);
                    
                    // 更新卫星位置
                    const planetMoons = solarSystemData.moons[planet.name.toLowerCase()];
                    if (planetMoons && planetMoons.length > 0) {
                        planetMoons.forEach(moon => {
                            // 计算新角度
                            moon.angle = now / moon.orbitPeriod * Math.PI * 2;
                            
                            // 更新位置
                            const moonX = Math.cos(moon.angle) * moon.orbitRadius * scaleFactor * 10;
                            const moonY = Math.sin(moon.angle) * moon.orbitRadius * scaleFactor * 10;
                            
                            const moonGroup = planetGroup.select(`.moon-group-${planet.name}[data-moon="${moon.name}"]`);
                            moonGroup.select(".moon")
                                .attr("transform", `translate(${moonX}, ${moonY})`);
                        });
                    }
                });
                
                // 继续动画
                requestAnimationFrame(animate);
            }
            
            // 开始动画
            animate();
            
            // 窗口大小变化时重新渲染
            window.addEventListener('resize', function() {
                container.html('');
                initSolarSystem();
            });
        }
        
        // 页面加载完成后初始化太阳系可视化
        window.addEventListener('load', initSolarSystem);
    </script>
</body>
</html>
